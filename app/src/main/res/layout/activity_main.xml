<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_perfil"
            android:layout_width="106dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/perfil" />

        <TextView
            android:id="@+id/txt_perfil"
            android:layout_width="217dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:text="Mi perfil"
            android:textColor="#26912A" />

        <ImageView
            android:id="@+id/cerrarSesion"
            android:layout_width="53dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="40"
            app:srcCompat="@drawable/apagar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="657dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imageView_buscar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/img_buscar" />

        <ImageView
            android:id="@+id/imageView_favoritos"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/img_favoritos" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>