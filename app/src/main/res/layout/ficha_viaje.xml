<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/viaje_cardview"
        android:layout_width="413dp"
        android:layout_height="341dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viaje_foto"
                android:layout_width="306dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="363dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/acceso_datos"
                    android:layout_width="325dp"
                    android:layout_height="169dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="332dp"
                        android:layout_height="63dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/viaje_destino"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/alfa_slab_one"
                            android:gravity="center_horizontal"
                            android:text="Destino"
                            android:textColor="#548235"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="116dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="273dp"
                                android:layout_height="28dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="86dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="Fecha de inicio:" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="Fecha de fin:" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="273dp"
                                android:layout_height="45dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/viaje_inicio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="TextView"
                                    android:textColor="#548235"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/viaje_fin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="TextView"
                                    android:textColor="#548235"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="274dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="Precio por persona:" />

                                <TextView
                                    android:id="@+id/viaje_precio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arvo"
                                    android:text="TextView"
                                    android:textColor="#548235"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/viaje_corazon"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/corazon_vacio" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>