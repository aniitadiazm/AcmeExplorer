<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:text="Filtros"
            android:textColor="#548235"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="35dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_salida" />

            <TextView
                android:id="@+id/textView_fechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="dd/mm/aaaa" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="fechaInicioClick"
                app:srcCompat="@drawable/calendario" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="34dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_llegada" />

            <TextView
                android:id="@+id/textView_fechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="dd/mm/aaaa" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="fechaFinClick"
                app:srcCompat="@drawable/calendario" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="151dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/flecha_min" />

            <EditText
                android:id="@+id/editText_precioMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/arvo"
                android:hint="Mínimo (€)"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="158dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_precio" />

            <EditText
                android:id="@+id/editText_precioMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/arvo"
                android:hint="Máximo (€)"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="151dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/flecha_max" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_quitarFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#B30909"
                android:foregroundTint="#AA0D0D"
                android:text="Quitar filtros" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_verResultados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver resultados" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>